<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2 class="ml-2"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form" >
  <div class="header row">
    <div class="col">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "full-width"%>
    </div>

    <div class="col">
      <%= form.label :date, style: "display: block" %>
      <div class="input-group">
        <%= form.datetime_select(:date, 
          default: Time.current.in_time_zone('Central Time (US & Canada)'), 
          class: 'form-control', 
          minute_step: 5, 
          start_year: Date.current.year - 5, 
          end_year: Date.current.year + 10) %>
      </div>
    </div>

    <div class="col">
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location, class: "full-width"%>
    </div>

  </div>

  <br/>
  <div class="header row">
    <div class="col">
        <%= form.label :rsvp_link, style: "display: block" %>
        <%= form.text_field :rsvp_link, class: "full-width" %>
    </div>

    <div class="col">
        <%= form.label :feedback_link, style: "display: block" %>
        <%= form.text_field :feedback_link, class: "full-width" %>
    </div>
  </div>

  <br/>
  <div class="header row">
    <div class="col">
      <%= form.label :description, style: "display: block"%>
      <%= form.text_area :description, style:"width: 100%" %>
    </div>
  </div>

  <br/>
  <div class="d-flex justify-content-end mr-2">
      <%= form.submit class: "btn btn-primary"%>
  </div>
  <br/>
<% end %>
</div>
